#include <stdio.h>

int main() {
    int n, i;

    printf("Enter size of array: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter array elements: ");
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    int totalSum = 0;
    for(i = 0; i < n; i++) {
        totalSum += arr[i];
    }

    int leftSum = 0, pivot = -1;
    for(i = 0; i < n; i++) {
        // Right sum = totalSum - leftSum - arr[i]
        if(leftSum == totalSum - leftSum - arr[i]) {
            pivot = i;
            break; // leftmost pivot
        }
        leftSum += arr[i];
    }

    printf("Pivot index: %d\n", pivot);

    return 0;
}
